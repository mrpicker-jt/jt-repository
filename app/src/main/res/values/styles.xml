<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="edittext_singleline">
        <item name="android:background">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_a</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textview_singleline">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_b</item>
    </style>

    <style name="btn_login">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_orange_round</item>
    </style>

    <style name="btn_sms">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_orange_round</item>
    </style>

    <style name="dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="scrollview">
        <item name="android:overScrollMode">never</item>
    </style>


    <style name="pulllistview">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:overScrollFooter">@null</item>
        <item name="android:overScrollHeader">@null</item>
        <item name="android:overScrollMode">never</item>
    </style>


    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="progressBarOrange" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_orange</item>
    </style>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="reference|float" />
        <attr name="mhv_HeightDimen" format="reference|dimension" />
    </declare-styleable>

</resources>
