<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_update_title"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:background="@color/blue_a"
            android:gravity="center"
            android:text="升级提示"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dialog_update_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:text="检测到新版本"
            android:textColor="@color/black_d"
            android:textSize="16sp" />

        <View
            android:id="@+id/dialog_update_divide"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="44dp"
            android:background="@color/gray_a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_update_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black_b"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/dialog_update_confirm_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="40dp"
                    android:background="@color/gray_b" />

                <TextView
                    android:id="@+id/dialog_update_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_dialog"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/black_b"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>